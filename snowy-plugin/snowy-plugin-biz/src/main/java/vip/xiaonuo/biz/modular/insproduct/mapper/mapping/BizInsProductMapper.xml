<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.xiaonuo.biz.modular.insproduct.mapper.BizInsProductMapper">

    <resultMap id="BizInsProductPageResultMap" type="vip.xiaonuo.biz.modular.insproduct.result.BizInsProductPageResult">
        <result column="id" property="id"/>
        <result column="farmId" property="farmId"/>
        <result column="productName" property="productName"/>
        <result column="productCode" property="productCode"/>
        <result column="insuranceType" property="insuranceType"/>
        <result column="coverageScope" property="coverageScope"/>
        <result column="premiumRate" property="premiumRate"/>
        <result column="maxCompensation" property="maxCompensation"/>
        <result column="status" property="status"/>
    </resultMap>

    <select id="page" resultMap="BizInsProductPageResultMap">
        select
            p.id as id,
            p.farm_id as farmId,
            p.product_name as productName,
            p.product_code as productCode,
            p.insurance_type as insuranceType,
            p.coverage_scope as coverageScope,
            p.premium_rate as premiumRate,
            p.max_compensation as maxCompensation,
            p.status as status
        from yzx.biz_ins_product p
        where p.delete_flag = 'NOT_DELETE'
        <if test="param != null and param.productName != null and param.productName != ''">
            and p.product_name like concat('%', #{param.productName}, '%')
        </if>
        <if test="param != null and param.status != null and param.status != ''">
            and p.status = #{param.status}
        </if>

        <choose>
            <when test="param != null and param.farmId != null and param.farmId != ''">
                and p.farm_id = #{param.farmId}
            </when>
            <when test="!allFarm">
                <choose>
                    <when test="farmIds != null and farmIds.size() &gt; 0">
                        and p.farm_id in
                        <foreach collection="farmIds" item="farmId" open="(" separator="," close=")">
                            #{farmId}
                        </foreach>
                    </when>
                    <otherwise>
                        and 1 = 0
                    </otherwise>
                </choose>
            </when>
        </choose>
        order by p.update_time desc
    </select>
</mapper>
