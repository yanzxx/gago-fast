<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.xiaonuo.biz.modular.finproduct.mapper.BizFinProductMapper">

    <resultMap id="BizFinProductPageResultMap" type="vip.xiaonuo.biz.modular.finproduct.result.BizFinProductPageResult">
        <result column="id" property="id"/>
        <result column="productId" property="productId"/>
        <result column="farmId" property="farmId"/>
        <result column="productName" property="productName"/>
        <result column="productCode" property="productCode"/>
        <result column="speciesCodes" property="speciesCodes"/>
        <result column="amountMin" property="amountMin"/>
        <result column="amountMax" property="amountMax"/>
        <result column="annualRate" property="annualRate"/>
        <result column="termMonths" property="termMonths"/>
        <result column="repayType" property="repayType"/>
        <result column="status" property="status"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>

    <select id="page" resultMap="BizFinProductPageResultMap">
        select
            p.id as id,
            p.id as productId,
            p.farm_id as farmId,
            p.product_name as productName,
            p.product_code as productCode,
            p.species_codes as speciesCodes,
            p.amount_min as amountMin,
            p.amount_max as amountMax,
            p.annual_rate as annualRate,
            p.term_months as termMonths,
            p.repay_type as repayType,
            p.status as status,
            to_char(p.update_time, 'YYYY-MM-DD HH24:MI:SS') as updateTime
        from yzx.biz_fin_product p
        where p.delete_flag = 'NOT_DELETE'
        <if test="param != null and param.productName != null and param.productName != ''">
            and p.product_name like concat('%', #{param.productName}, '%')
        </if>
        <if test="param != null and param.status != null and param.status != ''">
            and p.status = #{param.status}
        </if>

        <choose>
            <when test="param != null and param.farmId != null and param.farmId != ''">
                and p.farm_id = #{param.farmId}
            </when>
            <when test="!allFarm">
                <choose>
                    <when test="farmIds != null and farmIds.size() &gt; 0">
                        and p.farm_id in
                        <foreach collection="farmIds" item="farmId" open="(" separator="," close=")">
                            #{farmId}
                        </foreach>
                    </when>
                    <otherwise>
                        and 1 = 0
                    </otherwise>
                </choose>
            </when>
        </choose>
        order by p.update_time desc
    </select>
</mapper>
